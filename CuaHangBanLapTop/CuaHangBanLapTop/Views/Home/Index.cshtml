                    <div class="products-tabs">
                        <!-- tab -->
                        <div id="tab1" class="tab-pane active">
                            <div class="products-slick" data-nav="#slick-nav-1">
                                <!-- product -->
                                @foreach (var item in Model)
                                {
                                    <div class="product">
                                        <a asp-controller="SanPham" asp-action="Details" asp-route-id="@item.Id">
                                            <img src="~/images/@Html.DisplayFor(modelItem => item.AnhMauSP)" style="max-width:100%" />
                                        </a>
                                        <div class="product-body"style="min-height: 204px;">
                                            <h3 class="product-name">@item.TenSP</h3>
                                            <h6 class="product-price">Giá: @String.Format("{0:N0}", item.GiaKhuyenMai) VNĐ</h6>
                                            <h6><del class="product-old-price">Giá: @String.Format("{0:N0}", item.GiaBan) VNĐ</del></h6>
